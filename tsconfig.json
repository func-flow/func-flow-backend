{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
    ],
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "types": ["jest", "node"],
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "@types/express/index.d.ts",
      "@types/index.d.ts"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "./*",
        "./src/*"
      ],
      "#src/*": ["src/*"],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
